      <div class="product-text">
        <h1><%=listing.name%></h1><br>
        <h2><%=listing.category%></h2>
        <h2><%=listing.style%></h2>
        <p><%=listing.description%></p>
      </div>
      <div class="product-price-btn">
        <p><%=listing.price_per_day%>â‚¬</p> <br>
        <button type="button">Book</button>
