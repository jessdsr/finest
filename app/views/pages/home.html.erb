<div class=content-wrap>

  <%# <h1>Exceptional furniture all over the world</h1>
  <br>
  <h3><em>A selection of exceptional furniture with unique designs. Top of the line equipment and services and a dedicated furniture designer.</em></h3> %>

  <form id="my-search-bar" action="">
    <input id="search-input" type="search" required>
    <i class="fa fa-search"></i>
    <a href="javascript:void(0)" id="clear-btn">Clear</a>
  </form>

  <div class="cards">
    <% listings = Listing.all.first(4) %>
    <% photo_urls = ["https://www.gallery-wa.com/wp-content/uploads/wa-design-gallery-sori-yanagi-buterffly-elephant-stool-adrian-pearsall-kenzo-tange-american-craft-studio-prouve-perriand-isamu-noguchi-akari-rudolph-condon-andre-borderie.jpg",
                     "https://www.journaldujapon.com/wp-content/uploads/2021/06/Akari-24-N-1951-_-Wa-design-gallery--scaled.jpg",
                     "https://inter-fair.com/Content/img/Logos/49/4937/493743/header4.jpg",
                     "https://i.pinimg.com/736x/c6/c7/81/c6c781a9eaaae8814c09878be167561c.jpg"] %>
    <% listings.each_with_index do |listing, index| %>
      <div id="whole-card">
        <div class="card content">
          <div class="card-content">
            <div class="card-img">
              <%= image_tag photo_urls[index] %>
            </div>
            <div class="card-infos">
              <div class="info">
                <h2><%= listing.name %></h2>
                <p><%= listing.description %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
