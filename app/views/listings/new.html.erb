<h1>NEW</h1>

  <div class="wrapper" style="margin-top: 15px">
  <%= simple_form_for @listing, html: { autocomplete: 'off' }  do |f| %>
    <div class="product-img">

      <%= f.input :photo, as: :file, label: false %>
    </div>
    <div class="product-info">
      <div class="product-text">
          <div data-controller="inputs">
            <h1 class="" data-inputs-target="label"
              data-action="click->inputs#toggleInput">Name</h1>
            <%= f.input :name, label: false, input_html: {data: { inputs_target: 'input', action:'keyup->inputs#update' }, class:"special-input hidden"} %>
          </div>
          <div data-controller="inputs">
            <h2 data-inputs-target="label"
                  data-action="click->inputs#toggleInput">CATEGORY</h2>
            <%= f.input :category, collection: Listing.categories.map { |e| [e[0],e[0]] }, label: false, input_html: {data: { inputs_target: 'input', action:'click->inputs#update' }, class:"special-input hidden"} %>
          </div>
          <div data-controller="inputs">
            <h2 data-inputs-target="label"
                  data-action="click->inputs#toggleInput">STYLE</h2>
            <%= f.input :style, collection: Listing.styles.map { |e| [e[0],e[0]] }, label: false, input_html: {data: { inputs_target: 'input', action:'click->inputs#update' }, class:"special-input hidden"} %>
          </div>
          <div data-controller="inputs">
            <h2 data-inputs-target="label"
                  data-action="click->inputs#toggleInput">DESCRIPTION</h2>
            <%= f.input :description, label: false, input_html: {data: { inputs_target: 'input', action:'keyup->inputs#update' }, class:"special-input hidden"} %>
          </div>
          <div data-controller="inputs">
            <h2 data-inputs-target="label"
              data-action="click->inputs#toggleInput">City</h2>
            <%= f.input :city, label: false, input_html: {data: { inputs_target: 'input', action:'keyup->inputs#update' }, class:"special-input hidden"} %>
          </div>
        </div>
        <div id="price">
          <div data-controller="inputs">
            <h2 data-inputs-target="label"
                  data-action="click->inputs#toggleInput">... â‚¬</h2>
            <%= f.input :price_per_day, label: false, input_html: {data: { inputs_target: 'input', action:'keyup->inputs#update' }, class:"special-input hidden"} %>
          </div>
        </div>

        <div id= "book">
            <div class="form-actions">
              <%= f.button :submit, value: "CREATE" %>
            </div>
        </div>
    </div>
    <% end %>
  </div>

  <div id="btn-flat">
    <%= link_to "Back", listings_path, class: "btn btn-flat" %>
  </div>
