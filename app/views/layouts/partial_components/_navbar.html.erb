    <div class="mynav-header">
      <div class="mynav-title">FINEST <br> FURNITURE</div>
    </div>
  <% end %>
  <div class="mynav-btn">
    <label for="mynav-check">
      <span></span>
      <span></span>
      <span></span>
    </label>
  </div>
<%# er %>
  <div class="mynav-links">
    <%= link_to "Home", root_path, class: "nav-element #{active?('pages')}" %>
    <%= link_to "Listings", listings_path, class: "nav-element #{active?('listings')}" %>
    <%= link_to "Bookings", root_path, class: "nav-element #{active?('bookings')}" %>
    <%= link_to "TBD", root_path, class: "nav-element #{active?('tbd')}" %>
